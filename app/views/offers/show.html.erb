    </div>
  </div>
  <%= render "checkout" %>
</div>
    <div class="mt-4">
      <%= link_to "Edit offer", edit_offer_path(@offer), class: "col-4 text link-dark btn btn-primary" %>
      <%= link_to "Delete offer", offer_path(@offer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class:"col-4 text link-dark delete-link btn btn-danger" %>
        <% @offer.bookings.each do |booking| %>
          <% if booking.review %>
            <p><strong><%= booking.user.first_name %></strong>:</p>
            <%= booking.review %>

            <p>Rating: <%= booking.rating %> <i class="fa-solid fa-star"></i></p>

            <p>----------------</p>
            <br>
          <% end %>
        <% end %>
    </div>
</div>
