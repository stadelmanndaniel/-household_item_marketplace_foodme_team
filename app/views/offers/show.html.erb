



<div class="container ">
  <div class="row mt-4">
      <div class="col-5">
        <div class="card-category shadow p-3 mb-5 bg-body rounded">
          <img src="https://aisvip-a.akamaihd.net/masters/1387331/hausarbeit-ist-meistens-frauensache.jpg" class="rounded-4" alt="Girl in a jacket" width="500" height="300">
          <h1><%= @offer.name %></h1>
          <p><%= @offer.description %></p>
          <p><%= @offer.address %></p>
          <p><strong><%= @offer.price   %>â‚¬</strong></p>
        </div>
      </div>
    <%= render "checkout" %>
  </div>

<%= link_to "Edit offer", edit_offer_path(@offer) %>
<%= link_to "Delete offer", offer_path(@offer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-light text link-dark delete-link" %>


<% @offer.bookings.each do |booking| %>
  <% if booking.review %>
    <p>Review from user: <%= booking.user.first_name %> :</p>
    <%= booking.review %>

    <p>Rating: <%= booking.rating %> <i class="fa-solid fa-star"></i></p>

    <p>----------------</p>
    <br>
  <% end %>
<% end %>





<div class="container" data-controller="hello">
  <h1>Welcome to our form</h1>
  <%= simple_form_for [@offer, @booking], data: { controller: 'flatpickr' } do |f| %>
    <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
    <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: "endTime" }, id: 'end_time' } %>
    <%= f.submit 'Book' %>
  <% end %>
</div>
