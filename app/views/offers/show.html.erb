          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>

    <div class="card-category col-12 p-2 border-bottom sh bg-body rounded d-flex">
      <div>
        <p><strong><%= @offer.description %></strong></p>
        <i class="fa-solid fa-location-dot"></i> <%= @offer.address %>
      </div>
        <p><strong><%= @offer.price %>â‚¬</strong></p>
