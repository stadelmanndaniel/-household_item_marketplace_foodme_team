<div class="container" id="offer-form">
  <h3>Change your photos</h3>
      <%= simple_form_for @offer, html: {class: "offer_form"} do |f| %>

        <div class="form-inputs">
          <%= f.input :name%>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Photos (empty -> banana pic placeholder)" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit , id: "blue_button", class: "btn btn-dark"%>
        </div>
      <% end %>
</div>
