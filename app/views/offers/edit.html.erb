<div class="container" id="offer-form">
  <h3>Edit your offer</h3>
      <%= simple_form_for @offer, html: {class: "offer_form"} do |f| %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description, as: :text%>
          <%= f.input :price %>
          <%= f.input :category, :as => :select, :collection => Offer::CATEGORY%>
          <%= f.input :address%>
        </div>

        <div class="form-actions" >
          <%= f.button :submit , id: "blue_button", class: "btn btn-dark"%>
        </div>
      <% end %>
</div>
