<div class="container">
  <h2>Add a new offer below</h2>
      <%= simple_form_for @offer, html: {class: "offer_form"} do |f| %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description, as: :text%>
          <%= f.input :price %>
          <%= f.input :category, :as => :select, :collection => Offer::CATEGORY%>
          <%= f.input :address%>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Photos (empty -> banana pic placeholder)"%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, id: "blue_button", class: "btn btn-dark" %>
        </div>
      <% end %>
</div>
